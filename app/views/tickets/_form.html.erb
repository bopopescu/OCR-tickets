<%= render "layouts/errors", :object => @ticket%>

<%= form_for @ticket do |f| %>
  <%= f.label :ticket_img, "Upload Ticket Image", class: 'col-sm-2 control-label' %><br>
  <%= f.file_field :ticket_img %><br>
  <%= f.label :band, "Band/Artist:", class: 'col-sm-2 control-label' %>
  <%= f.text_field :band %><br>
  <%= f.label :venue, "Venue Name:", class: 'col-sm-2 control-label' %>
  <%= f.text_field :venue %><br>
  <%= f.label :city, "City:", class: 'col-sm-2 control-label' %>
  <%= f.text_field :city %><br>
  <%= f.label :date, "Date:", class: 'col-sm-2 control-label' %>
  <%= f.date_field :date %><br>
  <%= f.submit "Add ticket", class: "btn btn-primary" %>
<% end %>
