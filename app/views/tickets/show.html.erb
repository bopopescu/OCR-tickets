<h1><%= @ticket.band %></h1>

<%= image_tag(@ticket.ticket_img.url(:medium)) %>

<h3><strong>Venue:</strong> <%= @ticket.band %> </h3>
<h3><strong>City:</strong> <%= @ticket.city %> </h3>
<h3><strong>Date:</strong> <%= @ticket.date %> </h3>

<h2>Setlist</h2>
<ul>
  <% @setlist.each do |song| %>
    <li><%= song.fetch("name") %></li>
  <% end %>
</ul>

<p><%= link_to "Edit", edit_ticket_path(@ticket) %></p>
<p><%= link_to "Delete", ticket_path(@ticket),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>


<p><%= link_to "Return to home", tickets_path %></p>
